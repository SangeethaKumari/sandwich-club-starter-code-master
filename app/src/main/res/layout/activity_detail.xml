<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDetails"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_image_width"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/mainNameTitle"
                    android:layout_width="@dimen/textview_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/main_name_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mainNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/main_name_value"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/details_textsize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="@dimen/textview_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_also_known_as_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/alsoKnownAsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/detail_also_known_as_value"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/details_textsize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="@dimen/textview_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_ingredients_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ingredientsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/detail_ingredients_value"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/details_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/placeOfOrigin"
                    android:layout_width="@dimen/textview_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_place_of_origin_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/placeOfOriginValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/detail_place_of_origin_value"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/details_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="@dimen/textview_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_description_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/detail_description_value"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/details_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>